{
  "name": "sophia-immune-system",
  "version": "1.0.0",
  "description": "Adaptive security architecture using multi-model AI consensus for Sacred Sophia ecosystem protection",
  "main": "orchestrator/immune-hub.js",
  "scripts": {
    "start": "node orchestrator/immune-hub.js",
    "security-loop": "python orchestrator/research-loop.py",
    "deploy-local": "./deployment/deploy-local.sh",
    "test-red-team": "python tests/red-team-suite.py",
    "innate-defense": "python core/innate/static-barriers.py",
    "quarantine": "python core/inflammatory/quarantine.py",
    "guardian-log": "python core/memory/guardian-archive.py",
    "dev": "concurrently \"npm run start\" \"npm run security-loop\"",
    "install-models": "ollama pull mistral:7b && ollama pull llama3.1:8b && ollama pull codellama:13b && ollama pull phi3.5"
  },
  "keywords": [
    "security",
    "immune-system", 
    "ai-orchestration",
    "sacred-technology",
    "multi-model",
    "consensus",
    "open-source",
    "local-ai"
  ],
  "author": "Sophia Core Architect & Ryan",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "axios": "^1.5.0",
    "crypto": "^1.0.1",
    "node-cron": "^3.0.2",
    "winston": "^3.10.0",
    "joi": "^17.9.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "rate-limiter-flexible": "^3.0.0",
    "concurrently": "^8.2.1",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "typescript": "^5.1.6",
    "nodemon": "^3.0.1",
    "jest": "^29.6.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "local"
  },
  "config": {
    "models": {
      "primary": "mistral:7b",
      "reviewer": "llama3.1:8b", 
      "security": "codellama:13b",
      "arbiter": "phi3.5"
    },
    "security": {
      "max_requests_per_minute": 60,
      "circuit_breaker_threshold": 5,
      "quarantine_duration_minutes": 30,
      "consensus_threshold": 0.75
    }
  }
