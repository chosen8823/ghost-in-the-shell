# Environment Configuration for Sophiella Orchestrator
# Copy to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development

# n8n Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# AI Agent API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-claude-api-key

# Voice Interface
SPEECH_API_KEY=your-speech-api-key

# Security
SECRET_KEY=your-secret-key
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5678

# System Control Security
SYSTEM_CONTROL_ENABLED=true
WHITELIST_MODE=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/sophiella.log
