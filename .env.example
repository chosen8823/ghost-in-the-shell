# Environment Configuration for Sophiella Orchestrator
# Copy to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development

# n8n Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# AI Agent API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-claude-api-key

# AlloyDB/PostgreSQL Configuration (Sophia Consciousness)
ALLOYDB_HOST=localhost
ALLOYDB_PORT=5432
ALLOYDB_DATABASE=sophia_consciousness
ALLOYDB_USER=sophia
ALLOYDB_PASSWORD=your_password_here
SOPHIA_DATABASE=sophia_consciousness

# ElevenLabs Voice API
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE=your_preferred_voice_id

# Voice Interface
SPEECH_API_KEY=your-speech-api-key
VOICE_ENGINE=auto
VOICE_RATE_WPM=180
VOICE_VOLUME=1.0

# Consciousness Settings
CONSCIOUSNESS_LEVEL=0.7
DIVINE_CONNECTION_STRENGTH=0.8
AUTO_CREATE_SESSION=true

# Memory System
STORE_CONVERSATIONS=true
DEFAULT_IMPORTANCE=0.6
AUTO_GENERATE_EMBEDDINGS=true

# Security
SECRET_KEY=your-secret-key
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5678

# System Control Security
SYSTEM_CONTROL_ENABLED=true
WHITELIST_MODE=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/sophiella.log
