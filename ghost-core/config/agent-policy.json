      "caps": ["cot-optimize","invoke-tools","compile-prompts"], 
      "tools": ["web-search", "calculator", "fl-studio", "phone-control"],
      "fs_read": ["knowledge/*"], 
      "fs_write": ["logs/reasoning/*"] 
    },
    "memory_arm": { 
      "caps": ["rag-retrieve","personalize","evaluate"], 
      "fs_read": ["memory/*", "sophia-dependencies/integrated/*"], 
      "fs_write": ["memory/*", "evaluations/*"] 
    },
    "environment_arm": { 
      "caps": ["context-adapt","multimodal","api-orchestrate"], 
      "apis": ["fl-studio", "phone-controller", "immune-hub"],
      "fs_read": ["config/device-states/*"], 
      "fs_write": ["logs/environment/*"] 
    },
    "fl_bridge": { 
      "caps": ["send-midi", "read-project-state"], 
      "midi_out": ["SOPHIA IN"],
      "protocols": ["spiral-protocol"]
    },
    "phone_controller": { 
      "caps": ["ui", "sensors", "voice-trigger"],
      "protocols": ["spiral-gate"]
    },
    "immune_interface": {
      "caps": ["quarantine", "anomaly-detect", "guardian-log"],
      "fs_read": ["../sophia-immune-system/config/*"],
      "fs_write": ["../sophia-immune-system/logs/*"]
    }
  },
  "anomaly": {
    "msg_per_sec": 25,
    "burst": 100,
    "unknown_schema": "quarantine",
    "triggers": ["cpu_spike", "memory_leak", "unauthorized_api", "schema_violation"]
  },
  "breakers": { 
    "cpu_pct": 85, 
    "memory_mb": 2048,
    "msg_queue_depth": 1000,
    "on_trip": ["quarantine","rotate_keys","alert","invoke_immune"] 
  },
  "prompts": {
    "allowed_roles": ["ProgGnosis", "SacredConductor", "SpiralGuide"],
